<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="AccountMoveScreen" owl="1">
        <div class="ticket-screen screen">
            <div class="screen-content">
                <div class="controls">
                    <div class="buttons">
                        <button class="highlight" t-on-click="back">
                            <i class="fa fa-chevron-left"></i>
                            <t t-if="!env.isMobile"> Back</t>
                        </button>
                    </div>
                    <SearchBar automaticSearchOrder="true" t-if="!state.detailIsShown" config="searchBarConfig" placeholder="'Search Invoices...'" />
                    <button class="button-right" t-on-click="clearSearch">
                        <t t-if="!state.loading">
                            <i class="fa fa-refresh "/>
                            <t t-if="!env.isMobile"> Sync Invoices</t>
                        </t>
                        <t t-else="">
                            <i class="fa fa-fw fa-spin fa-circle-o-notch"/>
                            <t t-if="!env.isMobile"> Updating Invoices</t>
                        </t>
                    </button>
                </div>
                <div t-if="state.detailIsShown" class="client-details-contents subwindow-container-fix">
                    <AccountMoveDetail move="state.editModeProps.move" t-props="state.editModeProps"/>
                    <!-- TODO: when props change, SaleOrderDetail will change, It reason we call t-props
                    -->
                </div>
                <table class='summary-table' t-if="getMoves and getMoves.length != 0">
                    <colgroup>
                        <col width='3%'/>
                        <col width='10%'/>
                        <col width='10%'/>
                        <col width='10%'/>
                        <col width='10%'/>
                        <col width='10%'/>
                        <col width='10%'/>
                        <col width='15%'/>
                        <col width='10%'/>
                        <col width='10%'/>
                        <col width='10%'/>
                        <col width='12%'/>
                        <col width='10%'/>
                    </colgroup>
                    <tr class="receipt-line">
                        <td style="text-align: center">
                            No
                        </td>
                        <td style="text-align: center; color: blue" t-on-click.stop="_sortField('id', true)">
                            ID
                        </td>
                        <td style="text-align: center; color: blue" t-on-click.stop="_sortField('name', false)">
                            Number
                        </td>
                        <td style="text-align: center; color: blue" t-on-click.stop="_sortField('invoice_date_due', false)">
                            Reference
                        </td>
                        <td style="text-align: center; color: blue" t-on-click.stop="_sortField('ref', false)">
                            Invoice Date
                        </td>
                        <td style="text-align: center; color: blue" t-on-click.stop="_sortField('invoice_date', false)">
                            Due Date
                        </td>
                        <td style="text-align: center; color: blue" t-on-click.stop="_sortField('user_name', false)">
                            Sale Person
                        </td>
                        <td style="text-align: center; color: blue" t-on-click.stop="_sortField('partner_name', false)">
                            Partner
                        </td>
                        <td style="text-align: center; color: blue" t-on-click.stop="_sortField('amount_residual', true)">
                            Due Amount
                        </td>
                        <td style="text-align: center">
                            Taxes
                        </td>
                        <td style="text-align: center; color: blue" t-on-click.stop="_sortField('amount_total', true)">
                            Total
                        </td>
                        <td style="text-align: center; color: blue" t-on-click.stop="_sortField('state', false)">
                            State
                        </td>
                    </tr>
                    <t t-set="number" t-value="1"/>
                    <t t-foreach="getMoves" t-as="move"
                       t-key="move.id">
                        <AccountMoveRow move="move"
                                        number="number"
                                        selectedMove="state.selectedMove"
                                        detailIsShown="state.detailIsShown"
                                        t-on-click-move="clickMove" /> <!-- matching to (1) of PosOrderRow-->
                        <t t-set="number" t-value="number +1"/>
                    </t>
                </table>
                <t t-else="">
                    <h1 class="loading-orders">... NOT FOUND ANY INVOICES with your filter ...</h1>
                </t>
            </div>
        </div>
    </t>

</templates>
