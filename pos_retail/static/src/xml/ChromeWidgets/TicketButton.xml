<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="RetailTicketButton" owl="1">
        <div class="ticket-button orders-header-button" t-att-class="{ highlight: props.isTicketScreenShown, oe_hidden: isKitchenScreen || env.session.restaurant_order }" t-on-click="onClick">
            <div class="with-badge" t-att-badge="count">
                <i class="fa fa-list" aria-hidden="true"></i>
            </div>
            <div>Orders</div>
            <span class="shortcut-keyboard" t-if="!env.isMobile">
                (F8)
            </span>
        </div>
    </t>

</templates>
