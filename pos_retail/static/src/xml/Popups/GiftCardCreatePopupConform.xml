<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="giftCardCreatePopupConform" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup">
                    <header class="title drag-handle">
                        <t t-esc="props.title"/>
                    </header>
                    <div class="giftcard-popup">
                        <div>Card No :</div>
                        <div>
                             <t t-esc="props.CardNumber"/>
                        </div>
                    </div>
                    <div class="giftcard-popup">
                        <div>Customer :</div>
                        <div>
                             <t t-esc="props.SelectCustomer"/>
                        </div>
                    </div>
                    <div class="giftcard-popup">
                        <div>Expire Date :</div>
                        <div>
                             <t t-esc="props.ExpireDate"/>
                        </div>
                    </div>
                    <div class="giftcard-popup">
                        <div>Amount :</div>
                        <div>
                            <t t-esc="env.pos.format_currency(props.Amount)"/>
                        </div>
                    </div>
                    <div class="giftcard-popup">
                        <div>Card Type :</div>
                        <div>
                             <t t-esc="props.SelectCardType"/>
                        </div>
                    </div>
                    <footer class="footer">
                        <div class="button confirm" t-on-click="confirm">
                            <t t-esc="props.confirmText"/>
                        </div>
                        <div class="button cancel" t-on-click="cancel">
                            <t t-esc="props.cancelText"/>
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
