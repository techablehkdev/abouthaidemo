<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PopUpSetGuest" owl="1">
        <div class="modal-dialog">
            <div class="popup touch-scrollable scrollable-y">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <span class='label voucher-label'>Guest Name</span>
                            <input class="form-control"
                                   type="text"
                                   t-att-value="env.pos and env.pos.get_order().guest"
                                   name="guest"
                                   t-on-change="OnChange"
                            />
                        </div>
                        <div class="row">
                            <span class='label voucher-label'>Guest Number</span>
                            <input class="form-control"
                                   type="number"
                                   name="guest_number"
                                   t-att-value="env.pos and env.pos.get_order().guest_number"
                                   t-on-change="OnChange"
                            />
                        </div>
                        <span class="card-issue"/>
                        <div class="form-footer text-center">
                            <div class="btn btn-success pull-right" t-on-click="confirm">
                                Confirm
                                <span t-if="!env.isMobile"><i class="fa fa-keyboard-o"/><span> Enter </span></span>
                            </div>
                            <div class="btn btn-danger pull-right" t-on-click="cancel">
                                Close
                                <span t-if="!env.isMobile"><i class="fa fa-keyboard-o"/><span> ESC </span></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>