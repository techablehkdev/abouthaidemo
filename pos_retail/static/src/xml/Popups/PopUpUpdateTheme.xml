<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PopUpUpdateTheme" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup touch-scrollable scrollable-y">
                    <div class="card">
                        <div class="card-content">
                            <h4 class="card-title"><t t-esc=" props.title || '' " /></h4>
                            <div class="client-details-box clearfix">
                                <div class="client-details-left">
                                    <div class="row">
                                        <span class="label voucher-label">Background POS App</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.background"
                                               t-on-change="OnChange"
                                               type="color"
                                               name="background"/>
                                    </div>
                                    <div class="row">
                                        <span class="label voucher-label">Price Product Color</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.price_tag_color"
                                               t-on-change="OnChange"
                                               type="color"
                                               name="price_tag_color"/>
                                    </div>
                                    <div class="row">
                                        <span class="label voucher-label">Header Background Color</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.header_background_color"
                                               t-on-change="OnChange"
                                               type="color"
                                               name="header_background_color"/>
                                    </div>
                                    <div class="row">
                                        <span class="label voucher-label">Cart Background Color</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.cart_background"
                                               t-on-change="OnChange"
                                               type="color"
                                               name="cart_background"/>
                                    </div>
                                    <div class="row">
                                        <span class="label voucher-label">Product Screen Background Color</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.product_screen_background"
                                               t-on-change="OnChange"
                                               type="color"
                                               name="product_screen_background"/>
                                    </div>
                                    <div class="row">
                                        <span class="label voucher-label">Payment Screen Background Color</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.payment_screen_background"
                                               t-on-change="OnChange"
                                               type="color"
                                               name="payment_screen_background"/>
                                    </div>
                                    <div class="row">
                                        <span class="label voucher-label">Cart Width (%) (between 40 ~ 60 %)</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.cart_width"
                                               t-on-change="OnChange"
                                               type="number"
                                               name="cart_width"/>
                                    </div>
                                    <div class="row">
                                        <label class="label">Cart Items Box Position</label>
                                        <select class='form-control'
                                                t-on-change="OnChange"
                                                name='cart_box_style'>
                                            <option value='left'
                                                    t-att-selected="env.pos.config.cart_box_style == 'left' ? true : undefined">Move to Left</option>
                                            <option value='right'
                                                    t-att-selected="env.pos.config.cart_box_style == 'right' ? true : undefined">Move to Right</option>
                                        </select>
                                    </div>
                                    <div class="row">
                                        <label class="label">Buttons Box Position</label>
                                        <select class='form-control'
                                                t-on-change="OnChange"
                                                name='buttons_box_style'>
                                            <option value='left'
                                                    t-att-selected="env.pos.config.buttons_box_style == 'left' ? true : undefined">Move to Left</option>
                                            <option value='center'
                                                    t-att-selected="env.pos.config.buttons_box_style == 'center' ? true : undefined">Move to Center</option>
                                            <option value='right'
                                                    t-att-selected="env.pos.config.buttons_box_style == 'right' ? true : undefined">Move to Right</option>
                                        </select>
                                    </div>
                                    <div class="row">
                                        <label class="label">Receipt Template</label>
                                        <select class='form-control'
                                                t-on-change="OnChange"
                                                name='receipt_template'>
                                            <option value='arabic'
                                                    t-att-selected="env.pos.config.receipt_template == 'arabic' ? true : undefined">Arabic Receipt</option>
                                            <option value='odoo_original'
                                                    t-att-selected="env.pos.config.receipt_template == 'odoo_original' ? true : undefined">Odoo POS Original Receipt</option>
                                            <option value='retail'
                                                    t-att-selected="env.pos.config.receipt_template == 'retail' ? true : undefined">Our Custom Receipt</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="client-details-right">
                                    <div class="row">
                                        <span class="label voucher-label">Product Categories Height (%)</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.product_categories_height"
                                               t-on-change="OnChange"
                                               type="number"
                                               name="product_categories_height"/>
                                    </div>
                                    <div class="row">
                                        <label class="label">Product View Style</label>
                                        <select class='form-control'
                                                t-on-change="OnChange"
                                                name='product_view'>
                                            <option value='list'
                                                    t-att-selected="env.pos.config.product_view == 'list' ? true : undefined">List</option>
                                            <option value='box'
                                                    t-att-selected="env.pos.config.product_view == 'box' ? true : undefined">Box</option>
                                        </select>
                                    </div>
                                    <div class="row">
                                        <span class="label voucher-label">Product Width (em)</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.product_width"
                                               t-on-change="OnChange"
                                               type="number"
                                               name="product_width"/>
                                    </div>
                                    <div class="row">
                                        <span class="label voucher-label">Product Height (em)</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.product_height"
                                               t-on-change="OnChange"
                                               type="number"
                                               name="product_height"/>
                                    </div>
                                    <div class="row">
                                        <span class="label voucher-label">Product Margin (em)</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.product_margin"
                                               t-on-change="OnChange"
                                               type="number"
                                               name="product_margin"/>
                                    </div>

                                    <div class="row">
                                        <span class="label voucher-label">Product Image Width (%, 0 ~ 100%)</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.product_image_width"
                                               t-on-change="OnChange"
                                               type="number"
                                               name="product_image_width"/>
                                    </div>
                                    <div class="row">
                                        <span class="label voucher-label">Product Image Height (%, 0 ~ 100%)</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.product_image_height"
                                               t-on-change="OnChange"
                                               type="number"
                                               name="product_image_height"/>
                                    </div>
                                    <div class="row">
                                        <span class="label voucher-label">Product Name Font Size (px, 13 ~ 20px)</span>
                                        <input class='form-control'
                                               t-att-value="env.pos.config.product_name_font_size"
                                               t-on-change="OnChange"
                                               type="number"
                                               name="product_name_font_size"/>
                                    </div>
                                    <div class="row">
                                        <label class="label">Default Show All Buttons</label>
                                        <input type="checkbox"
                                               name="default_show_all_buttons_feature"
                                               t-att-checked="env.pos.config.default_show_all_buttons_feature"
                                               t-on-change="OnChange"
                                               class="checkbox">
                                            <span class="checkbox-material"><span class="check"></span></span>
                                        </input>
                                    </div>
                                </div>
                            </div>
                            <div class="form-footer text-center">
                                <div class="btn btn-danger pull-right" t-on-click="cancel">
                                    Close
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </Draggable>
        </div>
    </t>

</templates>