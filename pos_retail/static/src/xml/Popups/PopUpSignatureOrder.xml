<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PopUpSignatureOrder" owl="1">
        <div class="modal-dialog">
            <div class="popup popup-text" style="max-height: 600px;min-height: 300px;height: fit-content;">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title">
                            <t t-if="props.title">
                                <t t-esc="props.title"/>
                            </t>
                        </h4>
                        <div class="form-group">
                            <div class='row'>
                                <div class="signature" name="signature" t-on-change="OnChange"/>
                            </div>
                        </div>
                        <div class="form-footer text-center">
                            <div class="btn btn-success pull-right confirm" t-on-click="confirm">
                                Confirm
                                <span t-if="!env.isMobile"><i class="fa fa-keyboard-o"/><span> Enter </span></span>
                            </div>
                            <div class="btn btn-danger pull-right cancel"  t-on-click="cancel">
                                 Close
                                <span t-if="!env.isMobile"><i class="fa fa-keyboard-o"/><span> ESC </span></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>